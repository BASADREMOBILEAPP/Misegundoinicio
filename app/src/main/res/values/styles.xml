<resources>

    <!-- Base application theme. -->
    <style name = "AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.
         android:background="#0088aa"-->
    </style>

    <style name = "MyEditBottom">
        <item name = "android:layout_width">280dp</item>
        <item name = "android:layout_height">55dp</item>
        <item name = "android:layout_marginTop">20dp</item>
        <item name = "android:typeface">monospace</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:background">#2aff80</item>
    </style>

    <style name = "MyEditBottom.LargeFont">
        <item name = "android:background">#0088aa</item>
    </style>

    <style name = "MyStyleBottom">
        <item name = "android:gravity">center</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:src">@color/color_azul_obscuro</item>
    </style>

    <style name = "MyStyleBottom.LargeFont">
        <item name = "android:src">@color/color_azul</item>
        <item name = "android:">serif</item>
    </style>

    <style name = "MyStyleBottom1">
        <item name = "android:gravity">center</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:typeface">sans</item>
    </style>

    <style name = "MyStyleBottom1.LargeFont">
        <item name = "android:typeface">monospace</item>
    </style>


</resources>
